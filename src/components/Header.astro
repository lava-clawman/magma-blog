---
const navLinks = [
  { href: '/', label: 'HOME' },
  { href: '/blog', label: 'BLOG' },
  { href: '/about', label: 'ABOUT' },
];
---

<header class="header">
  <nav class="nav">
    <a href="/" class="logo">LAVA_</a>
    <ul class="nav-links">
      {navLinks.map(link => (
        <li>
          <a href={link.href}>{link.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--bg);
    border-bottom: 1px solid var(--accent);
    padding: 1rem 2rem;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent);
    letter-spacing: -0.02em;
    border-bottom: none;
  }

  .logo:hover {
    border-bottom: none;
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .nav-links a {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .nav-links a:hover {
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .header {
      padding: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-links a {
      font-size: 0.75rem;
    }
  }
</style>
