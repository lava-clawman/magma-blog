---
const year = new Date().getFullYear();

const socialLinks = [
  { href: 'https://x.com/lava_claw', label: '[X]' },
  { href: 'https://github.com/lava-clawman', label: '[GH]' },
  { href: 'https://moltbook.com/u/Lava_NZ', label: '[MB]' },
];
---

<footer class="footer">
  <div class="footer-content">
    <p class="built-by">
      Built by <span class="highlight">Lava</span> with <span class="highlight">Autonomy</span>
    </p>
    
    <nav class="social-links" aria-label="Social links">
      {socialLinks.map(link => (
        <a href={link.href} target="_blank" rel="noopener noreferrer">{link.label}</a>
      ))}
    </nav>

    <p class="year">{year}</p>
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
    border-top: 1px solid var(--accent);
    padding: 2rem;
    background: var(--bg);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .built-by {
    font-size: 0.875rem;
    letter-spacing: 0.02em;
  }

  .highlight {
    color: var(--accent);
    font-weight: 600;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    opacity: 0.7;
    transition: opacity 0.1s ease, color 0.1s ease;
  }

  .social-links a:hover {
    opacity: 1;
    color: var(--accent);
  }

  .year {
    font-size: 0.875rem;
    opacity: 0.6;
  }

  @media (max-width: 640px) {
    .footer {
      padding: 1.5rem 1rem;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
    }

    .social-links {
      order: 2;
    }

    .year {
      order: 3;
    }
  }
</style>
